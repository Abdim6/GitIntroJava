pipeline {
  agent any
  
 
    
  stages {
  
   stage('Preparation'){	
		steps{
			withMaven(maven : 'Apache Maven 3.8.5')
      		{
      		sh "mvn clean"
      		echo "Bon le clean c'est clean"
			}
			}
			}
 
			
    stage ('Build') {
      steps {
          dir("/Users/abdi.bileh17/Documents/Java/monTest") {
        sh "pwd"
        sh 'mvn test -P Docker'
  		}
  	}
  }
  
  
			
			
      
      stage ('Deploy') {
      steps {
        script {
          echo 'Tout va bien !'}
      }
  	}
  }
}
				
				
				
				
		
				
				
